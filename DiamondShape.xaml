<UserControl x:Class="SimpleFlowChart.DiamondShape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="100" Height="100">
    <Grid>
        <Polygon Points="50,0 100,50 50,100 0,50" Stroke="Black" StrokeThickness="2" Fill="LightGray"/>
        <TextBlock x:Name="TextBlock" Text="Diamond" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
